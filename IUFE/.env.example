# IUFA Accounts Academy - Environment Variables
# Copy this file to .env.local and update with your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://iufa-academy.com
NEXT_PUBLIC_SITE_NAME="IUFA Accounts Academy"

# Email Configuration (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="IUFA Accounts Academy <noreply@iufa-academy.com>"

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/iufa
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/iufa_academy
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/iufa
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/iufa

# Contact Information
NEXT_PUBLIC_PHONE=+919876543210
NEXT_PUBLIC_EMAIL=admissions@iufa-academy.com
NEXT_PUBLIC_ADDRESS="123 Business District, Mumbai, Maharashtra 400001"

# Database (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/iufa_db

# CRM Integration (optional)
HUBSPOT_API_KEY=your-hubspot-api-key
SALESFORCE_API_KEY=your-salesforce-api-key

# Payment Gateway (for future use)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# SMS Service (for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
